include ../../components/header/header.pug
include ../../components/room-amenities/room-amenities.pug 
include ../../components/impression-of-the-room/impression-of-the-room.pug
include ../../components/comment/comment.pug 
include ../../components/bullet-list/bullet-list.pug
include ../../components/cancellation/cancellation.pug
include ../../components/verification-form/verification-form.pug 
include ../../components/footer/footer.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="keywords" content="Toxin, hotel, отель, room details, сведения о номере")
    meta(name="description" content="Лучшие номера для вашей работы, отдыха и просто вдохновения")
    link(type="image/x-icon" rel="shortcut icon" href= require("../../../assets/images/favicon.svg").default)
    link(rel="mask-icon" href= require("../../../assets/images/favicon.svg").default color="gray")
    title Room Details
  body
    .room-details  
      +header()
      .room-details__image-list
        .room-details__image
        .room-details__image
        .room-details__image
      .room-details__content 
        .room-details__containers
          .room-details__room-amenities 
            h3.room-details__room-amenities-title Сведения о номере
            .room-details__container-room-amenities
              +room-amenities([
                { icon: 'icon-emoticon', title: 'Комфорт', text: 'Шумопоглощающие стены' },
                { icon: 'icon-location_city', title: 'Удобство', text: 'Окно в каждой из спален' },
                { icon: 'icon-cosiness', title: 'Уют', text: 'Номер оснащён камином' }
              ])
          .room-details__container-impression-of-the-room
            +impression-of-the-room()
          .room-details__comments
            .room-details__comments-titles 
              h3.room-details__comments-title-text Отзывы посетителей номера
              h3.room-details__comments-title-value 2 отзыва
            +comment({
              imgName: 'murad-sarafanov.jpg', 
              name: 'Мурад Сарафанов', 
              time: '5 дней назад', 
              likeButtonClass: 'active', 
              likeButtonValue: '12', 
              text: `
                Великолепный матрас на кровати в основной спальне! А пуфик вообще 
                потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал 
                комплименты повару — никто не жаловался из соседей.'
              `
            })
            +comment({
              imgName: 'patricia-steklyshkova.jpg', 
              name: 'Патрисия Стёклышкова', 
              time: 'Неделю назад', 
              likeButtonClass: 'inActive', 
              likeButtonValue: '2', 
              text: `
                Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую
                заказать, каждый день новое блюдо и десерт как комплимент'
              `
            })
          .room-details__bullet-list 
            h3.room-details__bullet-list-title Правила
            +bullet-list([
              'Нельзя с питомцами', 
              'Без вечеринок и мероприятий', 
              'Время прибытия — после 13:00, а выезд до 12:00'
            ])
          .room-details__container-cancellation
            +cancellation()
        .room-details__container-verification-form 
          +verification-form({ 
            price: '9990', 
            discount: '2179', 
            collecting: '300', 
            numberValue: '888', 
            numberState: 'люкс', 
            numberPrice: '9 990', 
            entryDate: '20 October, 2020', 
            checkOutDate: '24 October, 2020'
          })
      .room-details__line 
      .room-details__container-footer 
        +footer()