- var image_src_one = require('../src/images/userpic_one.png').default
- var image_src_two = require('../src/images/userpic_two.png').default
.room-details 
    include ../../components/header/header.pug 
    +header('', '')
    .images 
        .image-one
        .image-two
        .image-three
    .content 
        .container
            .about-number
                include ../../components/intelligence/intelligence.pug 
                include ../../components/impression/impression.pug 
            .comments
                .block-title
                    h3.block-title__text Отзывы посетителей номера
