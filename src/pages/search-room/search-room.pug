include ../../components/header/header.pug 
include ../../components/filter-date-dropdown/filter-date-dropdown.pug 
include ../../components/checkbox-buttons/checkbox-buttons.pug
include ../../components/rich-checkbox-buttons/rich-checkbox-buttons.pug 
include ../../components/expandable-checkbox-list/expandable-checkbox-list.pug
include ../../components/pagination/pagination.pug
include ../../components/footer/footer.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="icon" href="../src/images/logotip-gray.svg")
    title Search Room
  body
    .search-room 
      +header()
      .search-room__content 
        .search-room__sidebar 
          .search-room__container-filter-date-dropdown
            h3.search-room__filter-date-dropdown-title даты пребывания в отеле
            +filter-date-dropdown('20 October, 2020', '25 October, 2020')
          .search-room__container-dropdown-guests
            h3.search-room__dropdown-guests-title гости 
            .js-dropdown-guests(data-adults="2", data-children="0", data-babies="1")  
          .search-room__container-range-slider
            .search-room__range-slider-titles 
              h3.search-room__range-slider-title диапазон цены
              input.search-room__range-slider-input.js-range-slider-input(type="text")
            .search-room__range-slider.js-range-slider
            span.search-room__range-slider-text Стоимость за сутки пребывания в номере
          .search-room__container-checkbox-buttons
            h3.search-room__checkbox-buttons-title checkbox buttons
            +checkbox-buttons()
          .search-room__container-rich-checkbox-buttons
            h3.search-room__rich-checkbox-buttons-title доступность
            +rich-checkbox-buttons()
          .search-room__container-dropdown-number
            h3.search-room__dropdown-number-title удобства номера 
            .js-dropdown-number(data-bedrooms="2", data-beds="2", data-bathrooms="0") 
          .search-room__container-expandable-checkbox-list
          +expandable-checkbox-list('дополнительные удобства')
        .search-room__rooms
          h1.search-room__title Номера, которые мы для вас подобрали
          +pagination()
      .search-room__line 
      +footer()