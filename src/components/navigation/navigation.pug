mixin navigation-link(url, text)
  li.navigation__item
    a.navigation__link(href=url) #{text}

mixin navigation()
  nav.navigation 
    h1.navigation__title-h1 Pages & ui-kit 
    h3.navigation__title-h3 ui-kit 
    ul.navigation__list 
      +navigation-link('./pages/colors-type.html', 'Colors & Type')
      +navigation-link('./pages/cards.html', 'Cards')
      +navigation-link('./pages/headers-footers.html', 'Headers & Footers')
      +navigation-link('./pages/form-elements.html', 'Form Elements')
    h3.navigation__title-h3 Pages 
    ul.navigation__list 
      +navigation-link('./pages/landing-page.html', 'Landing Page') 
      +navigation-link('./pages/search-room.html', 'Search Room') 
      +navigation-link('./pages/room-details.html', 'Room Details') 
      +navigation-link('./pages/registration.html', 'Registration') 
      +navigation-link('./pages/authorization.html', 'Authorization')