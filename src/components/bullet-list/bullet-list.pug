mixin marker(text)
  li.bullet-list__item 
    .bullet-list__circle 
    span.bullet-list__text #{text}

mixin bullet-list()
  .bullet-list 
    ul.bullet-list__item-list 
      +marker('Нельзя с питомцами')
      +marker('Без вечеринок и мероприятий')
      +marker('Время прибытия — после 13:00, а выезд до 12:00')