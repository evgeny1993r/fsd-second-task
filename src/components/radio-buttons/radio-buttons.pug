mixin radio-button(id, text, checked)
  .radio-buttons__button
    input.radio-buttons__input(type="radio" id=id name="gender" checked=checked) 
    label.radio-buttons__label(for=id) #{text}

mixin radio-buttons()
  .radio-buttons 
    +radio-button('man', 'Мужчина', true)
    +radio-button('woman', 'Женщина', false)
