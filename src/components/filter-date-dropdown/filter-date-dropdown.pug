mixin filter-date-dropdown(entryDate, checkOutDate)
  .filter-date-dropdown.js-filter-date-dropdown
    .filter-date-dropdown__container.js-filter-date-dropdown__container
      span.filter-date-dropdown__input.js-filter-date-dropdown__input ДД.ММ - ДД.ММ
      i.filter-date-dropdown__icon-expand-more.icon-expand_more
    input.filter-date-dropdown__datepicker.js-filter-date-dropdown__datepicker(
      type="text" data-entry-date= entryDate, data-check-out-date= checkOutDate
    )